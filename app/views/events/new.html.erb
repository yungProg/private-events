<%= link_to events_path do%>
    <h1>PRIVATE EVENTS</h1>
<% end %>
<h2>Create event</h2>
<%= form_with model: @event do |form| %>
    <div class="form-container">
        <div class="theme-wrapper">
            <%= form.label "theme"%><br>
            <%= form.text_field "theme" %>
        </div>
        <div class="venue-wrapper">
            <%= form.label "venue"%><br>
            <%= form.text_field "venue" %>
        </div>
        <div class="event-date-wrapper">
            <%= form.label "event_date"%><br>
            <%= form.datetime_select "event_date" %>
        </div>
        <div class="description-wrapper">
            <%= form.label "description"%><br>
            <%= form.text_area "description" %>
        </div>
        <div class="status-wrapper">
            <%= form.radio_button :status, :privatized, checked: true %>
            <%=form.label :status_privatized, "Make it private" %><br>
            <%= form.radio_button :status, :publicized %>
            <%=form.label :status_publicized, "Make it public"%><br>
        </div>
        <%= form.submit %>
    </div>
<% end %>
